<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="grey">
        <color rgba="1 1 1 0.75" />
    </material>

    <material name="black">
        <color rgba="1 1 1 1" />
    </material>

    <!-- Base Link -->

    <link name="base_link">
    
    </link>

    <!-- Chassis Link -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
        <origin xyz="0.085 0 0.05"/>
            <geometry>
                <cylinder radius="0.085" length="0.055"/>
            </geometry>
            <material name="grey"/>
        </visual>
    </link>

    <!-- Left Wheel Link -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.085 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.025"/>
            </geometry>
        <material name="black"/>
        </visual>
    </link>

        <!-- Right Wheel Link -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.085 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.06" length="0.025"/>
            </geometry>
        <material name="black"/>
        </visual>
    </link>

</robot>